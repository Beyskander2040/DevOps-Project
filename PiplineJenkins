pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    environment {
      DOCKERHUB_CREDENTIALS=credentials('benelbeyskander465-dockerhub')
    }

    stages {
        stage('Checkout Git repository') {
            steps {
                echo 'Pulling'
                git branch: 'master', credentialsId: '50149f68-5226-4b9f-acb4-c0b99e149e50', url: 'https://github.com/Beyskander2040/DevOps-Project.git'
            }
        }

        stage('Maven Install') {
            steps {
                sh 'mvn install'
            }
        }

        stage('Build package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Ã‰tape de construction de l'image Docker
                    sh 'docker build -t benelbeyskander/tpachatproject:1.0 .'
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                sh "docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW"
                echo 'Login Completed'
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                sh 'docker push benelbeyskander/tpachatproject:1.0'
            }
        }
    }
}
